#!/bin/bash

SCRIPT=`realpath $0`
SCRIPTPATH=`dirname $SCRIPT`
cd $SCRIPTPATH/..
source .env

uid=$(id -u);
gid=$(id -u);
WEBCRATE_UID_env="WEBCRATE_UID=$uid "
WEBCRATE_GID_env="WEBCRATE_GID=$gid "

docker run --rm --env-file=$(pwd)/.env \
  -e WEBCRATE_UID=$uid \
  -e WEBCRATE_GID=$gid \
  -v $(pwd)/users.yml:/webcrate/users.yml \
  ace5040/webcrate-utils:stable \
  /webcrate/create-user.py
