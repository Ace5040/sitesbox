#!/bin/bash

SCRIPT=`realpath $0`
SCRIPTPATH=`dirname $SCRIPT`

cd $SCRIPTPATH/..

docker build -t ace5040/webcrate-core:stable --cache-from ace5040/webcrate-core:stable ./src/webcrate-core
docker build -t ace5040/webcrate-admin:stable --cache-from ace5040/webcrate-admin:stable ./src/webcrate-admin
docker build -t ace5040/webcrate-tools:stable --cache-from ace5040/webcrate-tools:stable ./src/webcrate-tools
docker build -t ace5040/webcrate-nginx:stable --cache-from ace5040/webcrate-nginx:stable ./src/webcrate-nginx
docker build -t ace5040/webcrate-mattermost:stable \
  --build-arg edition=team \
  --build-arg PUID=1000 \
  --build-arg PGID=1000 \
  --cache-from ace5040/webcrate-mattermost:stable \
  ./src/mattermost-docker/app
